<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Kontak</h2>

      <% if (errors.length !== 0) { %>
      <div class="alert alert-danger">
        <ul>
          <% errors.forEach((error) => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact/<%= contact.name %>?_method=PUT">
        <div class="mb-3">
          <label for="name" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">No Hp</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value="<%= contact.phone %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Ubah Kontak</button>
        <a href="/contact">
          <button type="submit" class="btn btn-secondary">Kembali</button>
        </a>
      </form>
    </div>
  </div>
</div>
