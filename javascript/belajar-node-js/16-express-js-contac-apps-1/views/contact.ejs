<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h2>Daftar Kontak Mahasiswa</h2>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success">
        <p><%= msg %></p>
      </div>
      <% } %>

      <a href="/contact/add" class="btn btn-primary">Tambah Kontak</a>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">No Telepon</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center">Data Kosong</td>
          </tr>
          <% } %> <% contacts.forEach((contact, index) => { index++ %>
          <tr>
            <th scope="row"><%= index++ %></th>
            <td><%= contact.name %></td>
            <td><%= contact.phone %></td>
            <td>
              <a href="/contact/<%= contact.name %>"
                ><h6><span class="badge bg-primary">Detail</span></h6></a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
